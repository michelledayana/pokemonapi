body {
  font-family: Arial, sans-serif;
  text-align: center;
  background-color: #f2f2f2;
  padding: 20px;
}
.container {
  max-width: 500px;
  margin: auto;
}
input {
  padding: 10px;
  width: 60%;
}
button {
  padding: 10px;
}
.card {
  margin-top: 20px;
  padding: 15px;
  background: white;
  border-radius: 10px;
  box-shadow: 0 0 10px #ccc;
}
.hidden {
  display: none;
}
